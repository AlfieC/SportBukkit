+                world.getServer().getPluginManager().callEvent(event);
+
+                if (event.isCancelled()) {
+                    removeBlock = false;
+                } else {
+                    world.addEntity(entitytntprimed);
+                    world.makeSound(entitytntprimed, "random.fuse", 1.0F, 1.0F);
+                }
+                // CraftBukkit end
             }
         }
     }
