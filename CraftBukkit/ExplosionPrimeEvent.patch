+            world.getServer().getPluginManager().callEvent(event);
+
+            if (!event.isCancelled()) {
+                entitytntprimed.fuseTicks = world.random.nextInt(entitytntprimed.fuseTicks / 4) + entitytntprimed.fuseTicks / 8;
