From 4db7db0c89ee4b323e97b34a424824ada3a9da82 Mon Sep 17 00:00:00 2001
From: Steve Anton <anxuiz.nx@gmail.com>
Date: Thu, 2 Aug 2012 17:00:13 -0700
Subject: [PATCH] Update the POM to distinguish pgm-craftbukkit from
 craftbukkit.

---
 pom.xml |   14 +++++++-------
 1 files changed, 7 insertions(+), 7 deletions(-)

diff --git a/pom.xml b/pom.xml
index e061ce6..03f33a9 100644
--- a/pom.xml
+++ b/pom.xml
@@ -1,6 +1,6 @@
 <project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
-  <groupId>org.bukkit</groupId>
-  <artifactId>craftbukkit</artifactId>
+  <groupId>tc.oc</groupId>
+  <artifactId>pgm-craftbukkit</artifactId>
   <packaging>jar</packaging>
@@ -8,4 +8,4 @@
-  <name>CraftBukkit</name>
+  <name>PGM-CraftBukkit</name>
   <url>http://www.bukkit.org</url>
 
   <properties>
@@ -49,8 +49,8 @@
 
   <dependencies>
     <dependency>
-      <groupId>org.bukkit</groupId>
-      <artifactId>bukkit</artifactId>
+      <groupId>tc.oc</groupId>
+      <artifactId>pgm-bukkit</artifactId>
       <version>1.3.1-R0.1-SNAPSHOT</version>
       <type>jar</type>
       <scope>compile</scope>
@@ -179,7 +179,7 @@
         <configuration>
           <archive>
             <manifestEntries>
-              <Main-Class>org.bukkit.craftbukkit.Main</Main-Class>
+              <Main-Class>tc.oc.pgm-craftbukkit.Main</Main-Class>
               <Implementation-Title>CraftBukkit</Implementation-Title>
               <Implementation-Version>${describe}</Implementation-Version>
               <Implementation-Vendor>Bukkit Team</Implementation-Vendor>
@@ -202,7 +202,7 @@
                 </manifestEntries>
               </manifestSection>
               <manifestSection>
-                <name>org/bukkit/</name>
+                <name>tc/oc/</name>
                 <manifestEntries>
                   <Sealed>true</Sealed>
                 </manifestEntries>
